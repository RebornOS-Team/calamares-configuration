# Maintainer: shivanandvp <shivanandvp@rebornos.org>

pkgname=calamares-configuration
pkgver=0.1.0
pkgrel=1
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
pkgdesc='Configuration for the RebornOS Calamares installer.'
url='https://github.com/RebornOS-Developers/calamares-configuration'
license=('GPL3')
depends=('python-yaml')
optdepends=('calamares-core')
makedepends=('rsync' 'git') 
provides=('calamares-configuration')
conflicts=('calamares-configuration' 'calamares-configuration-git')
source=("https://github.com/RebornOS-Developers/calamares-configuration/archive/refs/tags/v${pkgver}.tar.gz")
md5sums=('SKIP')

prepare() {
    :
}

package() {

    PROJECT_DIRECTORY="${srcdir}/calamares-configuration-${pkgver}"
    # BUILD_DIRECTORY="$PROJECT_DIRECTORY/build"
    # RESOURCE_DIRECTORY="$PROJECT_DIRECTORY/scripts/packaging"
    # NUMBER_OF_PROCESSORS="$(nproc)"

    # Calamares related files and directories

    (   
        # Copy settings_online.conf and settings_offline.conf
        cd "$PROJECT_DIRECTORY" && \
        find . \
            -mindepth 1 \
            -maxdepth 1 \
            -type f \
            -name '*.conf' \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
        install -Dm 755 settings_online.conf "${pkgdir}"/etc/calamares/settings.conf # Start off by copying online settings as the default
    )
    (
        # Copy module specific configuration
        cd "$PROJECT_DIRECTORY" && \
        find modules \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
    (
        # Copy branding
        cd "$PROJECT_DIRECTORY" && \
        find branding \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
    (
        # Copy QML files
        cd "$PROJECT_DIRECTORY" && \
        find qml \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )

    # Custom files and directories

    (
        # Copy images
        cd "$PROJECT_DIRECTORY" && \
        find images \
            -type f \
            -exec \
                install -Dm 755 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
    (
        # Copy post_install files and directories
        cd "$PROJECT_DIRECTORY" && \
        find post_install \
            -type f \
            -exec \
                install -Dm 700 "{}" "${pkgdir}/etc/calamares/{}" \;
    )
    (
        # Copy local packages
        cd "$PROJECT_DIRECTORY" && \
        find local_packages \
            -type f \
            -exec \
                install -Dm 700 "{}" "${pkgdir}/etc/calamares/{}" \;
    )

}
